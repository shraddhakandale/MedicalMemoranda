<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bgsymptom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Symptomes">


        <Button
            android:id="@+id/showbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/custom_show_button"
            android:text="Show"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/commonsymptomesfix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="132dp"
            android:text="Some common symptomes are..."
            android:textSize="18sp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/showbtn" />

        <TextView
            android:id="@+id/cs1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/custom_text_view"
            android:gravity="center_horizontal"
            android:text=""
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/commonsymptomesfix" />

        <TextView
            android:id="@+id/cs2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/custom_text_view"
            android:gravity="center_horizontal"
            android:text=""
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cs1" />

        <TextView
            android:id="@+id/cs3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="35dp"
            android:text=""
            android:textSize="20dp"
            android:visibility="invisible"
            android:textAlignment="center"
            android:textColor="#000000"
            android:background="@drawable/custom_text_view"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cs2" />

        <TextView
            android:id="@+id/testtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="40dp"
            android:text="TextView"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
